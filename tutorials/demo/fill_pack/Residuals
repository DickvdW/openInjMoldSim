#!/usr/bin/env gnuplot

set multiplot layout 2, 1 title "Residuals"

set style line 1 lc rgb '#0060ad' lt 1 lw 2 pt 7 ps 0 # --- blue
set style line 2 lc rgb '#9fac43' lt 1 lw 2 pt 7 ps 0 # --- blue
set style line 3 lc rgb '#dd181f' lt 1 lw 2 pt 7 ps 0 # --- blue
set style line 4 lc rgb '#000000' lt 2 lw 1 pt 7 ps 0 # --- blue

set logscale y
set format y "10^{%L}"
set title "p rgh"
set ylabel 'Residual'
set xlabel 'Iteration'
plot "< grep 'GAMG:' log.openInjMoldSim | cut -d' ' -f9 | tr -d ','" title 'GAMG' with lines ls 1

set logscale y
set format y "10^{%L}"
set title "T"
set ylabel 'Residual'
set xlabel 'Iteration'
plot "< grep 'smoothSolver:' log.openInjMoldSim | cut -d' ' -f9 | tr -d ','" title 'smoothSolver T ' with lines ls 1
pause 5
reread
